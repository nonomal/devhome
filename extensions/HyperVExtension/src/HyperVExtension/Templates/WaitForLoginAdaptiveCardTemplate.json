{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "${attemptCountText}",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "${title}",
            "horizontalAlignment": "Left",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "TextBlock",
            "text": "${description}",
            "wrap": true
        },
        {
            "type": "Container",
            "style": "warning",
            "items": [
                {
                    "type": "Table",
                    "columns": [
                        {
                            "width": "20px"
                        },
                        {
                            "width": 1
                        }
                    ],
                    "rows": [
                        {
                            "type": "TableRow",
                            "cells": [
                                {
                                    "type": "TableCell",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "data:image/png;base64,${icon}",
                                            "size": "Small"
                                        }
                                    ]
                                },
                                {
                                    "type": "TableCell",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${loginRequiredText}",
                                            "wrap": true,
                                            "weight": "Bolder"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "TableRow",
                            "cells": [
                                {
                                    "type": "TableCell"
                                },
                                {
                                    "type": "TableCell",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${loginRequiredDescriptionText}",
                                            "wrap": true
                                        }
                                    ]
                                }
                            ]
                        }
                    ],
                    "showGridLines": false,
                    "spacing": "None",
                    "firstRowAsHeaders": false
                }
            ],
            "$when": "${showOkButton == true}"
        },
        {
            "type": "Container",
            "style": "attention",
            "items": [
                {
                    "type": "Table",
                    "columns": [
                        {
                            "width": "20px"
                        },
                        {
                            "width": 1
                        }
                    ],
                    "rows": [
                        {
                            "type": "TableRow",
                            "cells": [
                                {
                                    "type": "TableCell",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "data:image/png;base64,${icon}",
                                            "size": "Small"
                                        }
                                    ]
                                },
                                {
                                    "type": "TableCell",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${loginRequiredText}",
                                            "weight": "Bolder",
                                            "spacing": "Small"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "${loginRequiredDescriptionText}",
                                            "wrap": true,
                                            "spacing": "Small"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "TableRow",
                            "cells": [
                                {
                                    "type": "TableCell"
                                },
                                {
                                    "type": "TableCell",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${loginRequiredText2}",
                                            "weight": "Bolder",
                                            "spacing": "Small"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "${loginRequiredDescriptionText2}",
                                            "wrap": true,
                                            "spacing": "Small"
                                        }
                                    ]
                                }
                            ],
                            "$when": "${!empty($root.loginRequiredText2)}"
                        }
                    ],
                    "showGridLines": false,
                    "spacing": "None",
                    "firstRowAsHeaders": false
                }
            ],
            "$when": "${showOkButton == false}"
        }
    ],
    "actions": [
        {
            "type": "Action.Execute",
            "title": "${okText}",
            "id": "okAction",
            "data": {
                "id": "okAction"
            },
            "$when": "${showOkButton == true}",
            "style": "positive"
        },
        {
            "type": "Action.Execute",
            "title": "${cancelText}",
            "id": "cancelAction",
            "associatedInputs": "none"
        }
    ]
}