{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "${attemptCountText}",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "${title}",
            "horizontalAlignment": "Left",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "TextBlock",
            "text": "${description}",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "id": "UserVal",
            "label": "${userNameLabel}",
            "isRequired": true,
            "errorMessage": "${userNameIsRequiredText}",
            "$when": "${showOkButton == true}"
        },
        {
            "type": "Input.Text",
            "id": "PassVal",
            "style": "Password",
            "label": "${passwordLabel}",
            "$when": "${showOkButton == true}"
        },
        {
            "type": "Container",
            "style": "attention",
            "items": [
                {
                    "type": "Table",
                    "columns": [
                        {
                            "width": "20px"
                        },
                        {
                            "width": 1
                        }
                    ],
                    "rows": [
                        {
                            "type": "TableRow",
                            "cells": [
                                {
                                    "type": "TableCell",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "data:image/png;base64,${icon}",
                                            "size": "Small"
                                        }
                                    ]
                                },
                                {
                                    "type": "TableCell",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${invalidCredentialText}",
                                            "wrap": true,
                                            "weight": "Bolder"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "TableRow",
                            "cells": [
                                {
                                    "type": "TableCell"
                                },
                                {
                                    "type": "TableCell",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${invalidCredentialDescription}",
                                            "wrap": true
                                        }
                                    ]
                                }
                            ]
                        }
                    ],
                    "firstRowAsHeaders": false,
                    "showGridLines": false
                }
            ],
            "$when": "${showInfobar == true}"
        }
    ],
    "actions": [
        {
            "type": "Action.Execute",
            "title": "${okText}",
            "id": "okAction",
            "data": {
                "id": "okAction"
            },
            "$when": "${showOkButton == true}",
            "style": "positive"
        },
        {
            "type": "Action.Execute",
            "title": "${cancelText}",
            "id": "cancelAction",
            "associatedInputs": "none"
        }
    ]
}